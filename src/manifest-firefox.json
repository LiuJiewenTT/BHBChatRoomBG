{
    "manifest_version": 3,
    "name": "BHB聊天室背景插入插件",
    "version": "1.0",
    "icons": {
        "16": "res/icons/icon.png",
        "48": "res/icons/icon.png",
        "128": "res/icons/icon.png"
    },
    "description": "为BHB聊天室网页添加背景图片，5种模式任你选！\nGithub项目：https://github.com/LiuJiewenTT/BHBChatRoomBG。（好评就给个Star吧球球了）",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://boyshelpboys.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "res/icons/icon.png",
            "48": "res/icons/icon.png",
            "128": "res/icons/icon.png"
        }
    },
    "background": {
        "scripts": [
            "background_worker.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://boyshelpboys.com/chat.htm",
                "*://boyshelpboys.com/my-notice.htm"
            ],
            "js": [
                "libs/browser-polyfill.js",
                "utils/apply_work.js",
                "content.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "BHBChatRoomBG-unlisted@liujiewentt.github.io",
            "strict_min_version": "109.0"
        }
    }
}