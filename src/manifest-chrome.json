{
    "manifest_version": 3,
    "name": "BHB聊天室背景插入插件",
    "version": "1.6",
    "icons": {
        "16": "res/icons/icon.png",
        "48": "res/icons/icon.png",
        "128": "res/icons/icon.png"
    },
    "description": "为BHB聊天室网页添加背景图片，6种模式任你选！\nGithub项目：https://github.com/LiuJiewenTT/BHBChatRoomBG。（好评就给个Star吧球球了）",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "cookies",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "*://boyshelpboys.com/*",
        "https://api.github.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "res/icons/icon.png",
            "48": "res/icons/icon.png",
            "128": "res/icons/icon.png"
        }
    },
    "background": {
        "service_worker": "background_worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://boyshelpboys.com/chat.htm",
                "*://boyshelpboys.com/my-notice.htm",
                "*://boyshelpboys.com/*"
            ],
            "js": [
                "libs/browser-polyfill.js",
                "utils/utils.js",
                "utils/apply_work.js",
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "utils/apply_work.js",
                "utils/wrap_msg.js"
            ],
            "matches": [
                "*://boyshelpboys.com/*"
            ]
        }
    ]
}